{{template "header" .}}
    <header>
        <h1>FAQ - Pic Bucket</h1>
    </header>
    <div class="container">
        {{range .}}
            {{template "qa" .}}
        {{end}}
    </div>
{{template "footer" .}}

{{define "qa"}}
    <div class="faq-item">
            <div class="question">Q: {{.Question}}</div>
            <div class="answer">A: {{.Answer}}</div>
        </div>
{{end}}